@page
@model RegisterModel
@{
    ViewData["Title"] = "Cadastrar usuário";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Name">Nome</label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Phone">Telefone</label>
                <input asp-for="Input.Phone" class="form-control" id="telefone" pattern="\([0-9]{2}\)[\s][0-9]{8,9}" type="tel" />
                <span asp-validation-for="Input.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email">Email</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmEmail">Confirme seu email</label>
                <input asp-for="Input.ConfirmEmail" class="form-control" />
                <span asp-validation-for="Input.ConfirmEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Cpf">CPF</label>
                <input asp-for="Input.Cpf" class="form-control" id="cpf" placeholder="Apenas números"/>
                <span asp-validation-for="Input.Cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Rg">RG</label>
                <input asp-for="Input.Rg" class="form-control" id="rg" placeholder="Apenas números"/>
                <span asp-validation-for="Input.Rg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">Senha</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">Confirme sua senha</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.CidadeDistrito"></label>
                <select asp-for="Input.CidadeDistrito" class="form-control" id="cidade">
                    <option value="" disabled selected hidden>Selecione</option>
                    <option value="Londrina">Londrina</option>
                    <option value="Warta">Warta</option>
                    <option value="São Luís">São Luís</option>
                </select>
                <span asp-validation-for="Input.CidadeDistrito" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Regiao">Região</label>
                <select asp-for="Input.Regiao" class="form-control" id="regiao">
                    <option value="" disabled selected hidden>Selecione</option>
                    <option value="Norte">Norte</option>
                    <option value="Sul">Sul</option>
                    <option value="Centro">Centro</option>
                    <option value="Leste">Leste</option>
                    <option value="Oeste">Oeste</option>
                    <option value="---" hidden>---</option>
                </select>
                <span asp-validation-for="Input.Regiao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Rua">Rua</label>
                <input asp-for="Input.Rua" class="form-control" />
                <span asp-validation-for="Input.Rua" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Bairro">Bairro</label>
                <input asp-for="Input.Bairro" class="form-control" id="bairro"/>
                <span asp-validation-for="Input.Bairro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Numero">Número</label>
                <input asp-for="Input.Numero" class="form-control" />
                <span asp-validation-for="Input.Numero" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary cadastrar">Cadastrar</button>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            $('#telefone').mask("(99) 000000000");
            $('#cpf').mask("00000000000");
            $('#rg').mask("00000000000000");
        });

        $("#cidade").change(function () {
            if ($(this).val() != "" && $(this).val() != "Londrina") {
                $("#regiao").val($('option:contains("---")').val());
                $("#regiao").prop('disabled', true)
                $("#bairro").val('---');
                $("#bairro").prop('disabled', true)
            }
            else {
                $("#regiao").val($('option:contains("")').val());
                $("#regiao").prop('disabled', false)
                $("#bairro").val('');
                $("#bairro").prop('disabled', false)
            }
        });

    </script>
}
