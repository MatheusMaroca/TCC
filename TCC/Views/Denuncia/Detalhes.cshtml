@model TCC.Models.Denuncia

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1>

<div>
    <h4>Denuncia</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Foto)
        </dt>
        <dd class="col-sm-10">
            @if (@Model.Foto != null || @Model.Foto == "")
            {
                <img src="~/Imagens/Denuncias/@Model.Foto" class="rounded-circle" height="40" width="40" asp-append-version="true" />
            }
            else
            {
                <img src="~/Imagens/Denuncias/default.png" class="rounded-circle" height="40" width="40" asp-append-version="true" />
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataRealizada)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataRealizada)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
