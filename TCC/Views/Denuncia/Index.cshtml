@model IEnumerable<TCC.Models.Denuncia>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Descrição
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                Data Realizada
            </th>
            <th>
                Endereço
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                @if (item.Foto == null || item.Foto == "")
                {
                    <td>
                        Não possui foto

                    </td>
                }
                else
                {
                    <td>
                        Possui foto
                    </td>
                }

                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @item.DataRealizada.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @item.DenunciaEndereco.CidadeDistrito - @item.DenunciaEndereco.Rua, @item.DenunciaEndereco.Numero
                </td>
                <td>
                    <a href="#" class="btn btn-default btnEditar" data-value="@item.Id">Editar</a> ||
                    <a href="#" class="btn btn-default btnDetalhes" data-value="@item.Id">Detalhes</a> ||
                    <a href="#" class="btn btn-default btnExcluir" data-value="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div id="teste"></div>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script type="text/javascript">
        $(document).ready(function () {

            $.ajaxSetup({ cache: false });
            $(".btnDetalhes").click(function () {

                var id = $(this).data("value");
                $("#teste").load("/Denuncia/Detalhes/" + id, function () {
                    $('#myModal').modal("show");
                });
            });
            $(".btnEditar").click(function () {

                var id = $(this).data("value");
                $("#teste").load("/Denuncia/EditarStatus/" + id, function () {
                    $('#myModal').modal("show");
                });
            });
        });
    </script>

}